{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "prettier.useTabs": false,
  "prettier.tabWidth": 2,
  "intelephense.format.enable": true,
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "php.inlayHints.parameters.enabled": false,
  "php.inlayHints.parameters.byReference": true,
  "php.inlayHints.types.lambdaParameter": true,
  "eslint.useESLintClass": true,
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "blade.format.enable": true,
  "bladeFormatter.format.indentSize": 2,
  "bladeFormatter.format.useTabs": false,
  "bladeFormatter.format.indentInnerHtml": false
}
